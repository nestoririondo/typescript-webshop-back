{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNEXT",
    "module": "CommonJS",
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/app/*"],
      "@db/*": ["src/db/*"],
      "@assets/*": ["src/assets/*"],
      "@domain/*": ["src/domain/*"],
      "@utils/*": ["src/utils/*"]
    },
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "noEmit": false
  }
}
